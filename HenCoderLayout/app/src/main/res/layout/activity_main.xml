<?xml version="1.0" encoding="utf-8"?>
<com.willkernel.app.hencoderlayout.AdjustablePanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.willkernel.app.hencoderlayout.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <com.willkernel.app.hencoderlayout.MyImageView
            android:id="@+id/myImageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_luffy" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="width" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/widthBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/heightBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

</com.willkernel.app.hencoderlayout.AdjustablePanel>
